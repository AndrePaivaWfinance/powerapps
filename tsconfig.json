{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "declaration": false,
    "sourceMap": true,
    "strict": false,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": ["dom", "es2015", "es2017"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "out"
  ]
}
